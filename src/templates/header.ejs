<header class="header">
  <div class="header__menu-container">
    <div class="header__help-btn">
      <button class="help-btn button" data-tab-link="help">
        <i class="far fa-question-circle"></i>
      </button>
    </div>
    <h1 class="header__title">Minesweeper</h1>
    <div class="header__menu">
      <ul class="header-menu">
        <li class="header-menu__item">
          <button class="stats-btn button" data-tab-link="statistics">
            <i class="far fa-chart-bar"></i>
          </button>
        </li>
        <li class="header-menu__item">
          <button class="settings-btn button" data-tab-link="settings">
            <i class="fas fa-cog"></i>
          </button>
        </li>
      </ul>
    </div>
  </div>
  
  <div class="menu-tabs">
    <div class="menu-tabs__overlay-bottom"></div>
    <button class="menu-tabs__close-btn button">
      <i class="far fa-times-circle"></i>
    </button>
    <div class="menu-tabs__item" data-tab="help">
      <h2 class="menu-tabs__title">How to play</h2>
      <div class="menu-tabs__content">
        <%- require('./help.ejs')() %>
      </div>
    </div>
    <div class="menu-tabs__item" data-tab="statistics">
      <h2 class="menu-tabs__title">Statistics</h2>
      <div class="menu-tabs__content">    
      </div>
    </div>
    <div class="menu-tabs__item" data-tab="settings">
      <h2 class="menu-tabs__title">Settings</h2>
      <div class="menu-tabs__content">
        <%- require('./settings.ejs')() %>
      </div>
    </div>
  </div>
</header>